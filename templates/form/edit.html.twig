{% use "form_div_layout.html.twig" %}

{%- block form_rows -%}
    <dl>
        {{ parent() }}
    </dl>
{%- endblock form_rows -%}

{%- block form_row -%}
    {%- set widget_attr = {} -%}

    <dt>{{- form_label(form) -}}</dt>
    <dd>{{- form_errors(form) -}}{{- form_widget(form, widget_attr) -}}{{- form_help(form) -}}</dd>
{%- endblock form_row -%}

{%- block button_row -%}
    {{- form_widget(form) -}}
{%- endblock button_row -%}
