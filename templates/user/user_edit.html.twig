{% extends '/base.html.twig' %}

{% form_theme form 'form/edit.html.twig' %}

{% block body %}
    <div class="main">
        {{ form_start(form) }}
        <h1>Edit user: <a href="{{ path('user_detail' , { id: user.id }) }}">{{ user.username }}</a></h1>
        {{ form_widget(form) }}
        <button type="submit">Submit</button>
        {{ form_end(form) }}
    </div>
{% endblock %}