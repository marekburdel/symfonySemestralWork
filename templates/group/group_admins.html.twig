{% extends 'base.html.twig' %}

{% block body %}
    <div class="main">
        <section class="headline">
            <a class="btn btn--back" href="{{ path('group_detail' , { id: group.id }) }}">Back</a>
            <h1>group {{ group.name }}</h1>
        </section>
        <section class="create__new add__new--admin">
            <a href="{{ path( 'group_admins_add_list', {id: group.id}) }}">Add new admin.</a>
        </section>
        <section class="list list__admins">
            <h1>group admins:</h1>

            {% if group.admins is empty %}
                <p class="warning"> none</p>
            {% else %}
                <ul>
                    {% for admin in group.admins %}
                        <li>
                            <a class="name" href="{{ path('user_detail', { id: admin.id}) }}">
                                {{ admin.username }} - {{ admin.name }} {{ admin.surname }}
                            </a>
                            <div class="list__actions">
                                <a class="list__delete
                            href="{{ path('group_admin_delete', {id: group.id, memberId: admin.id}) }}">
                                DELETE
                                </a>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}

    </div>
    </div>

{% endblock %}